{
	"name": "front-end-tools",
	"version": "0.0.1",
	"description": "JavaScript tools for front-end interactions.",
	"main": "",
	"scripts": {
		"start": "babel ./**/src/*.js -w -d ./**/dist/",
		"build": "babel ./**/src/*.js -d ./**/dist/",
		"lint:css": "stylelint ./**/src/*.css",
		"lint:js": "eslint ./**/src"
	},
	"devDependencies": {
		"@babel/cli": "^7.6.4",
		"@babel/core": "^7.6.4",
		"@babel/preset-env": "^7.6.3",
		"eslint": "^6.5.1",
		"stylelint": "^11.1.1",
		"stylelint-config-recommended": "^3.0.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"babel": {
		"comments": false,
		"minified": true,
		"presets": [
			"@babel/preset-env"
		]
	},
	"eslintConfig": {
		"env": {
			"amd": true,
			"browser": true,
			"es6": true,
			"node": true
		},
		"extends": "eslint:recommended"
	},
	"stylelint": {
		"extends": "stylelint-config-recommended"
	}
}
